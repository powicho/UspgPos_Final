﻿
@model IEnumerable<UspgPOS.Models.DetalleVenta>

<h2>Detalles de Venta</h2>

<table class="table">
    <thead>
        <tr>
            <th>Producto</th>
            <th>Cantidad</th>
            <th>Precio Unitario</th>
            <th>Total</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var detalle in Model)
        {
            <tr>
                <td>@detalle.Producto.Nombre</td>
                <td>@detalle.Cantidad</td>
                <td>@detalle.PrecioUnitario</td>
                <td>@(detalle.Cantidad * detalle.PrecioUnitario)</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@detalle.Id" class="btn btn-primary">Editar</a>
                    <a asp-action="Delete" asp-route-id="@detalle.Id" class="btn btn-danger">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="Create" asp-route-ventaId="@ViewBag.VentaId" class="btn btn-success">Agregar Detalle</a>