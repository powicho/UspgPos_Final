@model UspgPOS.Models.Producto

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Nombre)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Nombre)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Precio)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Precio)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Cantidad)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Cantidad)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Marca)
        </dt>
        <dd class="col-sm-10">
            <div class="d-flex align-items-center">
                @if (!string.IsNullOrEmpty(Model.Marca.UrlThumbnailMarca))
                {
                    <img src="@Model.Marca.UrlThumbnailMarca" style="max-width:50px; max-height:50px; margin-right: 10px;" />
                }
                @Html.DisplayFor(model => model.Marca.Nombre)
            </div>
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Clasificacion)
        </dt>
        <dd class="col-sm-10">
            <div class="d-flex align-items-center">
                @if (!string.IsNullOrEmpty(Model.Clasificacion.UrlThumbnailClasificacion))
                {
                    <img src="@Model.Clasificacion.UrlThumbnailClasificacion" style="max-width:50px; max-height:50px; margin-right: 10px;" />
                }
                @Html.DisplayFor(model => model.Clasificacion.Nombre)
            </div>
        </dd>

        <dt class="col-sm-2">
            Imagen
        </dt>
        <dd class="col-sm-10">
            @if (!string.IsNullOrEmpty(Model.ImgUrl))
            {
                <img src="@Model.ImgUrl" style="max-width:300px; max-height:300px" />
            }
            else
            {
                <p>No hay imagen disponible</p>
            }
        </dd>
    </dl>
</div>

<div>
    <a asp-action="Index" class="btn btn-secondary btn-sm">
        <i class="fas fa-arrow-left"></i> Volver a la Lista
    </a>
</div>
