 @model UspgPOS.Models.Producto

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Producto</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Nombre" class="control-label"></label>
                <input asp-for="Nombre" class="form-control" />
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Marca" class="control-label"></label>
                <select asp-for="MarcaId" class="form-control" asp-items="ViewBag.MarcaId"></select>
                <span asp-validation-for="MarcaId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Clasificacion" class="control-label"></label>
                <select asp-for="ClasificacionId" class="form-control" asp-items="ViewBag.ClasificacionId"></select>
                <span asp-validation-for="ClasificacionId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Precio" class="control-label"></label>
                <input asp-for="Precio" class="form-control" />
                <span asp-validation-for="Precio" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Cantidad" class="control-label"></label>
                <input asp-for="Cantidad" class="form-control" />
                <span asp-validation-for="Cantidad" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="imageFile" class="control-label">Imagen del Producto</label>
                <input type="file" name="imageFile" class="form-control" />
            </div>
        <dd class="col-sm-10">
                @if (!string.IsNullOrEmpty(Model.ImgUrl))
                {
                <img src="@Model.ImgUrl" style="max-width:300px; max-height:300px" />
                }
                else
                {
                <p>No hay imagen disponible</p>
                }
        </dd>
        <div class="form-group">
            <button type="submit" class="btn btn-success btn-sm">
                <i class="fas fa-save"></i> Guardar
            </button>
        </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-secondary btn-sm">
        <i class="fas fa-arrow-left"></i> Volver a la Lista
    </a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
